FROM node:14-buster-slim as builder

COPY . /app

WORKDIR /app

ARG REACT_APP_API_URL
ARG REACT_APP_WS_URL
ARG REACT_APP_API_KEY_FIREBASE
ARG REACT_APP_FIREBASE_AUTH_DOMAINE
ARG REACT_APP_FIREBASE_APP_ID
ARG REACT_APP_FIREBASE_DATABASE_URL
ARG REACT_APP_FIREBASE_PROJECT_ID
ARG REACT_APP_FIREBASE_BUCKET
ARG REACT_APP_FIREBASE_BUCKET_PLACE
ARG REACT_APP_FIREBASE_MESSAGING_SENDER_ID
ARG REACT_APP_FIREBASE_MESUREMENT_ID

RUN yarn install || true
RUN yarn run build

FROM nginx:alpine

COPY --from=builder /app/build /usr/share/nginx/html
COPY config/nginx.conf /etc/nginx/conf.d/default.conf
#COPY config/nginx-snippets /etc/nginx/snippets

EXPOSE 80
EXPOSE 443

CMD ["nginx", "-g", "daemon off;"]
